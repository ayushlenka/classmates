{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@globals/*": ["./app/(pages)/_globals/*"],
      "@components/*": ["./app/(pages)/_components/*"],
      "@data/*": ["./app/(pages)/_data/*"],
      "@hooks/*": ["./app/(pages)/_globals/_hooks/*"],
      "@contexts/*": ["./app/(pages)/_contexts/*"],
      "@utils/*": ["./app/(pages)/_globals/_utils/*"], 
      "@actions/*": ["./app/(api)/_actions/*"],
      "@datalib/*": ["./app/(api)/_datalib/*"]
    }
  },
  "include": ["types/**/*.d.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
